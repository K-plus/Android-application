<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blood_dark"
                tools:context=".com.kplus.app.activities.LoginActivity">

    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_Email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:text="@string/title_activity_login"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        app:floatingLabel="highlight"
        app:floatingLabelText="@string/email_hint"
        android:hint="@string/email_hint"
        android:text="helderbas@gmail.com"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_Email"
        android:inputType="textPassword"
        android:ems="10"
        app:floatingLabel="highlight"
        app:floatingLabelText="@string/password_hint"
        android:hint="@string/password_hint"
        android:text="password"/>

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/btn_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_Password"
        android:text="@string/button_login"
        android:onClick="login"
        app:fl_theme="@array/blood"
        app:fl_touchEffect="fl_ripple"
        app:fl_blockButtonEffectHeight="3dp"/>

</RelativeLayout>
